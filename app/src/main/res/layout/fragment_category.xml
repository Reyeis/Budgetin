<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="10dp">

    <!-- Title -->
    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center" />

    <!-- Category Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Category Option 1 (with Icon) -->
        <LinearLayout
            android:id="@+id/categoryOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_monetization_on_24"
                android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gaji"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Category Option 2 (with Icon) -->
        <LinearLayout
            android:id="@+id/categoryOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:focusable="true"
            android:clickable="true">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_card_giftcard_24"
                android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonus"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_fastfood_24"
                android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Category Option 2 (with Icon) -->
        <LinearLayout
            android:id="@+id/categoryOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:focusable="true"
            android:clickable="true">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_airplanemode_active_24"
                android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traveling"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryOption5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:focusable="true"
            android:clickable="true">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_shopping_bag_24"
                android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryOption6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:focusable="true"
            android:clickable="true">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_medical_services_24"
                android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/categoryOption7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:focusable="true"
            android:clickable="true">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_currency_bitcoin_24"
                android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Investment"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryOption8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:focusable="true"
            android:clickable="true">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_emoji_transportation_24"
                android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transportation"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryOption9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:focusable="true"
            android:clickable="true">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_edit_note_24"
                android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Another"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Add more categories here with icons -->
    </LinearLayout>
</LinearLayout>
