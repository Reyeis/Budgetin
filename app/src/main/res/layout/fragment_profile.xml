<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileFragment">

    <!-- Background Image or Shape -->
    <ImageView
        android:id="@+id/backgroundShape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:src="@drawable/pojok"
        android:scaleType="fitXY" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp" />

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <!-- Profile Image and Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="-10dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/enma"
                android:layout_marginEnd="1dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emma Ashley"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enmanyapanjang@gmail.com"
                        android:textSize="14sp"
                        android:textColor="@color/gray" />

            </LinearLayout>
        </LinearLayout>

        <!-- Profile Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emma_ashley"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emma"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ashley"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20-12-1990"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <!-- Pengaturan Button -->
        <Button
            android:id="@+id/pengaturan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Pengaturan"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/baseline_settings_24"
            android:gravity="center|start"
            android:paddingStart="20dp" />

        <!-- Sign Out Button -->
        <Button
            android:id="@+id/signOutButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/baseline_logout_24"
            android:gravity="center|start"
            android:paddingStart="20dp" />

    </LinearLayout>

</FrameLayout>
