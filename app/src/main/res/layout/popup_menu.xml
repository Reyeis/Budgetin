<!-- res/layout/popup_menu_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="16dp">

    <!-- Penerimaan -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/btn_income"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:src="@drawable/baseline_add_circle_24"
            android:tint="#88C273"
            android:contentDescription="Income" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Income"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Transfer -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/btn_transfer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:src="@drawable/baseline_emoji_transportation_24"
            android:contentDescription="Goals" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Goals"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Pengeluaran -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/btn_expense"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:src="@drawable/min_24"
            android:tint="#B03052"
            android:contentDescription="Expense" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Outcome"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
