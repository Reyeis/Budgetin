<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="10dp">

    <!-- Title -->
    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center" />

    <!-- Category Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Category Option 1 (with Icon) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:clickable="true"
            android:onClick="onCategoryClick">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_salary" <!-- Replace with your icon -->
            android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:id="@+id/categoryOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gaji"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Category Option 2 (with Icon) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:clickable="true"
            android:onClick="onCategoryClick">

            <!-- Category Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mone" <!-- Replace with your icon -->
            android:tint="#757575" />

            <!-- Category Name -->
            <TextView
                android:id="@+id/categoryOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonus"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Add more categories here with icons -->
    </LinearLayout>
</LinearLayout>
